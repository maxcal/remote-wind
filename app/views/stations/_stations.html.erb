

<table class="stations large-12 columns">
  <thead>
  <tr>
    <th>Name</th>
    <th>Wind speed</th>
    <th>Direction</th>
    <th>Status</th>
  </tr>
  </thead>
  <tbody>
  <% @stations.each do |station| %>
      <% measure = station.current_measure.presence %>
      <tr class="station" id="station-<%= station.id %>">
        <td class="name"><%= link_to station.name, station %></td>
        <td class="speed">
          <% if measure %>
              <%= measure.speed %> (<%=  measure.min_wind_speed %> - <%= measure.max_wind_speed %>)
          <% end %>
        </td>
        <td class="direction">
          <% if measure %>
              <%= degrees_and_cardinal(measure.direction) %>
          <% end %>
        </td>
        <td>
          <% unless station.down? %>
              <span class="label success">OK</span>
          <% else %>
              <span class="label alert">DOWN</span>
          <% end %>
        </td>
      </tr>

  <% end %>
  <% if can? :create, Station && params[:controller] == 'stations' %>
      <tr class="station">
        <td><%= link_to 'New Station', new_station_path %></td>
      </tr>
  <% end %>
  </tbody>
</table>