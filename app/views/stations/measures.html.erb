<h1>Listing measures</h1>

<table>
  <tr>
    <th style="width: 5em; text-align: left;">Speed</th>
		<th style="width: 7em; text-align: left;">Max speed</th>
		<th style="width: 7em; text-align: left;">Min speed</th>
    <th style="width: 7em; text-align: left;">Direction</th>
    <th style="width: 13em; text-align: left;">When</th>
		<th style="width: 4em; text-align: left;">Diff</th>
  </tr>

<% @measures.each do |measure| %>
  <tr>
    <td><%= number_with_precision(measure.speed/100, :precision => 1) unless measure.speed.nil? %> m/s</td>
 		<td><%= number_with_precision(measure.max_wind_speed/100, :precision => 1) unless measure.max_wind_speed.nil? %> m/s</td>
 		<td><%= number_with_precision(measure.min_wind_speed/100, :precision => 1) unless measure.min_wind_speed.nil? %> m/s</td>
    <td><%= number_with_precision(measure.direction/10, :precision => 1)unless measure.direction.nil? %>Â°</td>
    <td><%= measure.created_at.to_s(:myDateTimeFormat) %></td>
		<td class="<%= measure.time_diff > 350 ? :red : :green %>"><%= number_with_precision(measure.time_diff, :precision => 0) %></td>
  </tr>
<% end %>
</table>