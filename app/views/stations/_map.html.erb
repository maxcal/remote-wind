<% unless @stations.empty?  %>
<div class="map-canvas small-12 large-12 columns" id="map_canvas" data-lat="<%= @stations.first.lat %>" data-lon="<%= @stations.first.lon %>">
  <% @stations.each do |station| %>
      <div class="marker hidden" data-lat="<%= station.lat %>" data-lon="<%= station.lon %>">
        <h3 class="title"><%= station.name %></h3>
      </div>
  <% end %>
</div>
<% end %>