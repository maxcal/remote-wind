<h1>Listing measures</h1>

<table>
  <tr>
    <th>Speed</th>
    <th>Direction</th>
    <th>When</th>
		<th>Diff</th>
  </tr>

<% @measures.each do |measure| %>
  <tr>
    <td><%= number_with_precision(measure.speed/10, :precision => 1) unless measure.speed.nil? %>m/s</td>
    <td><%= number_with_precision(measure.direction/10, :precision => 1)unless measure.direction.nil? %>Â°</td>
    <td><%= measure.created_at %></td>
		<td><%= measure.time_diff %></td>
  </tr>
<% end %>
</table>

