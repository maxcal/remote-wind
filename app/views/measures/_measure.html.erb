<% cache measure do %>
<tr class="measure" data-uid="<%= measure.id %>">
  <td class="created_at">
    <%= time_date_hours_seconds(station.time_to_local(measure.created_at)) %>
  </td>
  <td class="direction">
    <%= degrees_and_cardinal(measure.direction) %>
  </td>
  <td class="speed">
    <%= measure.speed %> (<%= measure.min %>-<%= measure.max %>)m/s
  </td>
</tr>
<% end %>