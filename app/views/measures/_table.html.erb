<table class="measures small-12 columns">
  <thead>
  <th>Time</th>
  <th>Direction</th>
  <th>Wind Speed</th>
  </thead>
  <tbody>
  <% @measures.each do |measure| %>
      <% cache measure do %>
      <tr class="measure" data-uid="<%= measure.id %>">
        <td class="created_at"><%= time_date_hours_seconds(@station.time_to_local(measure.created_at)) %></td>
        <% unless params[:controller] == 'stations' %>
            <td class="station"><%= @station.name %></td>
        <% end %>
        <td class="direction"><%= degrees_and_cardinal(measure.direction) %></td>
        <td class="speed"><%= measure.speed %> (<%= measure.min %>-<%= measure.max %>)m/s</td>
      </tr>
      <% end %>
  <% end %>
  </tbody>
</table>